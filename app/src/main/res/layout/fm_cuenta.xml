<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/fondo_degradado">


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="470dp">


        <ImageView
            android:layout_width="225dp"
            android:layout_height="120dp"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            />






       <LinearLayout
           android:gravity="center"
           android:background="@color/transparente"
           android:orientation="vertical"
           android:layout_width="320dp"
           android:layout_height="290dp"
           android:layout_margin="15dp">




           <TextView
               android:textColor="@color/blanco"
               android:paddingTop="30dp"
               android:textSize="25dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/bienvenido" />


           <LinearLayout

               android:layout_marginTop="10pt"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <EditText
                   android:id="@+id/et_Usuario"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:background="#4F5FFFFF"
                   android:drawableLeft="@mipmap/ic_launcher_createuser"
                   android:ems="10"
                   android:hint="Usuario"
                   android:inputType="text"
                   android:paddingBottom="10dp"
                   android:paddingTop="10dp"
                   android:textColor="@color/blanco"
                   android:textColorHint="@color/blanco"
                   android:textSize="15dp" />



           </LinearLayout>


           <LinearLayout
               android:paddingTop="10dp"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:orientation="horizontal">


               <EditText
                   android:id="@+id/et_Contrasenia"
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:background="#4F5FFFFF"
                   android:drawableLeft="@mipmap/ic_launcher_password"
                   android:ems="10"
                   android:hint="Contraseña"
                   android:inputType="textPassword"
                   android:paddingBottom="10dp"
                   android:paddingTop="10dp"
                   android:textColor="@color/blanco"
                   android:textColorHint="@color/blanco"
                   android:textSize="15dp" />


           </LinearLayout>

           <LinearLayout

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"

               android:orientation="horizontal">

               <Button
                   android:id="@+id/btn_Ingresar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Acceder" />




           </LinearLayout>

           <TextView
               android:id="@+id/texto_olvidaste_contrasena"
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_gravity="center_horizontal"
               android:layout_weight="1"
               android:gravity="center_vertical"
               android:text="¿Olvidaste tu constraseña?"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textColor="#0E8AEE"
               android:visibility="invisible" />


       </LinearLayout>



    </LinearLayout>


</LinearLayout>
